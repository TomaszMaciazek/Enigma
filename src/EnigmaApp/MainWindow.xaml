<Window x:Class="EnigmaApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EnigmaApp"
        mc:Ignorable="d"
        Title="Enigma" Height="720" Width="1280"
        MinHeight="720" MinWidth="1280">
    <Window.Resources>
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="#ddd" />
            <Setter Property="Margin" Value="10 5" />
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Background" Value="#555"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="#000"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#d5e66e" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Margin" Value="10 5"/>
            <Setter Property="TextWrapping" Value="Wrap" />
            <Setter Property="AcceptsReturn" Value="True"/>
        </Style>
        <Style x:Key="ArrowButtonStyle" TargetType="Button">
            <Setter Property="FontFamily" Value="Marlett"/>
            <Setter Property="FontSize" Value="30"/>
        </Style>
        <ControlTemplate x:Key = "ButtonTemplate" TargetType = "Button">
            <Grid>
                <Ellipse 
                    x:Name = "ButtonMainEllipse" 
                    Height = "40" Width = "40" 
                    Fill="#333"
                    Stroke="#000000"
                    >
                </Ellipse>
                <Ellipse 
                    x:Name = "ButtonSecondEllipse" 
                    Margin="5"
                    Height = "30" Width = "30" 
                    Fill="{TemplateBinding Background}"
                    >
                </Ellipse>

                <ContentPresenter
                    Content = "{TemplateBinding Content}" 
                    HorizontalAlignment = "Center"
                    VerticalAlignment = "Center"
                />
            </Grid>
            <ControlTemplate.Triggers>
                <Trigger Property = "IsMouseOver" Value = "True">
                    <Setter TargetName = "ButtonMainEllipse" Property = "Fill" >
                        <Setter.Value>
                            <SolidColorBrush Color="#555"/>
                        </Setter.Value>
                    </Setter>
                    <Setter TargetName = "ButtonSecondEllipse" Property = "Fill" >
                        <Setter.Value>
                            <SolidColorBrush Color="#fff"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>

            </ControlTemplate.Triggers>

        </ControlTemplate>
    </Window.Resources>
    <Grid Background="#444">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="0.3*"/>
        </Grid.RowDefinitions>
        <Grid
            Grid.Row="0"
            Grid.Column="0" Margin="0,2,-0.4,388.2" Grid.RowSpan="2"
        >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="6*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="4*"/>
            </Grid.RowDefinitions>
            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                Text="Initial rotors settings"
                Foreground="#fff"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="24"
            />
            <TextBlock 
                Grid.Row="0"
                Grid.Column="1"
                Text="Plugboard connections"
                Foreground="#fff"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="24"
            />
            <StackPanel
                Grid.Row="1"
                Grid.Column="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal"    
            >
                <StackPanel
                    Orientation="Vertical"
                    Background="#e6e3dc"
                >
                    <Border
                        Padding="5"
                        Background="#a5a5a5"
                    >
                        <StackPanel
                        Orientation="Horizontal"
                        Background="#a2a39d"
                        >
                            <Button
                                Width="30"
                                x:Name="DecrementFirstRotorNumber"
                                Click="DecrementFirstRotorNumber_Click"
                                Style="{StaticResource ArrowButtonStyle}"
                                Content="3"
                                Height="30"
                            
                            />
                            <TextBlock
                                Margin="5 0"
                                Background="#fff"
                                x:Name="FirstRotorNumber"
                                FontSize="12"
                                Text="I"
                                TextAlignment="Center"
                                VerticalAlignment="Center"
                                Height="30"
                                Width="30"
                                Padding="7"
                             />
                            <Button
                                Width="30"
                                x:Name="IncrementFirstRotorNumber"
                                Click="IncrementFirstRotorNumber_Click"
                                Style="{StaticResource ArrowButtonStyle}"
                                Content="4"
                                Height="30"
                            />
                        </StackPanel>
                    </Border>
                    <Button 
                        x:Name="IncrementFirstRotorPosition"
                        Click="IncrementFirstRotorPosition_Click"
                        Margin="10"
                        Style="{StaticResource ArrowButtonStyle}"
                        Content="5"
                        Height="40"
                        Width="40"
                    />
                    <Border
                        HorizontalAlignment="Center"
                        BorderBrush="#000"
                        BorderThickness="1"
                        Width="40"
                        Height="40"
                        >
                        <TextBlock
                            x:Name="FirstRotorPosition"
                            Text="A"
                            Width="40"
                            Height="40"
                            TextAlignment="Center"
                            Padding="5"
                            FontSize="20"
                            Background="#fff"
                        />
                    </Border>
                    <Button 
                        x:Name="DecrementFirstRotorPosition"
                        Click="DecrementFirstRotorPosition_Click"
                        Margin="10"
                        Style="{StaticResource ArrowButtonStyle}"
                        Content="6"
                        Height="40"
                        Width="40"
                    />
                </StackPanel>
                <StackPanel
                    Orientation="Vertical"
                    Background="#e6e3dc"
                >
                    <Border
                        Padding="5"
                        Background="#a5a5a5"
                    >
                        <StackPanel
                        Orientation="Horizontal"
                        Background="#a2a39d"
                        >
                            <Button
                                Width="30"
                                x:Name="DecrementSecondRotorNumber"
                                Click="DecrementSecondRotorNumber_Click"
                                Style="{StaticResource ArrowButtonStyle}"
                                Content="3"
                                Height="30"
                            
                            />
                            <TextBlock
                                Margin="5 0"
                                Background="#fff"
                                x:Name="SecondRotorNumber"
                                FontSize="12"
                                Text="II"
                                TextAlignment="Center"
                                VerticalAlignment="Center"
                                Height="30"
                                Width="30"
                                Padding="7"
                             />
                            <Button
                                Width="30"
                                x:Name="IncrementSecondRotorNumber"
                                Click="IncrementSecondRotorNumber_Click"
                                Style="{StaticResource ArrowButtonStyle}"
                                Content="4"
                                Height="30"
                            />
                        </StackPanel>
                    </Border>
                    <Button 
                        x:Name="IncrementSecondRotorPosition"
                        Click="IncrementSecondRotorPosition_Click"
                        Margin="10"
                        Style="{StaticResource ArrowButtonStyle}"
                        Content="5"
                        Height="40"
                        Width="40"
                    />
                    <Border
                        HorizontalAlignment="Center"
                        BorderBrush="#000"
                        BorderThickness="1"
                        Width="40"
                        Height="40"
                        >
                        <TextBlock
                            x:Name="SecondRotorPosition"
                            Text="A"
                            Width="40"
                            Height="40"
                            TextAlignment="Center"
                            Padding="5"
                            FontSize="20"
                            Background="#fff"
                        />
                    </Border>
                    <Button 
                        x:Name="DecrementSecondRotorPosition"
                        Click="DecrementSecondRotorPosition_Click"
                        Margin="10"
                        Style="{StaticResource ArrowButtonStyle}"
                        Content="6"
                        Height="40"
                        Width="40"
                    />
                </StackPanel>
                <StackPanel
                    Orientation="Vertical"
                    Background="#e6e3dc"
                >
                    <Border
                        Padding="5"
                        Background="#a5a5a5"
                    >
                        <StackPanel
                        Orientation="Horizontal"
                        Background="#a2a39d"
                        >
                            <Button
                                Width="30"
                                x:Name="DecrementThirdRotorNumber"
                                Click="DecrementThirdRotorNumber_Click"
                                Style="{StaticResource ArrowButtonStyle}"
                                Content="3"
                                Height="30"
                            
                            />
                            <TextBlock
                                Margin="5 0"
                                Background="#fff"
                                x:Name="ThirdRotorNumber"
                                FontSize="12"
                                Text="III"
                                TextAlignment="Center"
                                VerticalAlignment="Center"
                                Height="30"
                                Width="30"
                                Padding="7"
                             />
                            <Button
                                Width="30"
                                x:Name="IncrementThirdRotorNumber"
                                Click="IncrementThirdRotorNumber_Click"
                                Style="{StaticResource ArrowButtonStyle}"
                                Content="4"
                                Height="30"
                            />
                        </StackPanel>
                    </Border>
                    <Button 
                        x:Name="IncrementThirdRotorPosition"
                        Click="IncrementThirdRotorPosition_Click"
                        Margin="10"
                        Style="{StaticResource ArrowButtonStyle}"
                        Content="5"
                        Height="40"
                        Width="40"
                    />
                    <Border
                        HorizontalAlignment="Center"
                        BorderBrush="#000"
                        BorderThickness="1"
                        Width="40"
                        Height="40"
                        >
                        <TextBlock
                            x:Name="ThirdRotorPosition"
                            Text="A"
                            Width="40"
                            Height="40"
                            TextAlignment="Center"
                            Padding="5"
                            FontSize="20"
                            Background="#fff"
                        />
                    </Border>
                    <Button 
                        x:Name="DecrementThirdRotorPosition"
                        Click="DecrementThirdRotorPosition_Click"
                        Margin="10"
                        Style="{StaticResource ArrowButtonStyle}"
                        Content="6"
                        Height="40"
                        Width="40"
                    />
                </StackPanel>
            </StackPanel>
            <StackPanel
                Grid.Row="1"
                Grid.Column="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Vertical"
            >
                <StackPanel Orientation="Horizontal">
                    <Button
                        Click="PlugboardButton_Click"
                        Style="{StaticResource ButtonStyle}"
                        Template="{StaticResource ButtonTemplate}"
                        Content="Q"
                    />
                    <Button
                        Click="PlugboardButton_Click"
                        Style="{StaticResource ButtonStyle}"
                        Template="{StaticResource ButtonTemplate}"
                        Content="W"
                    />
                    <Button 
                        Click="PlugboardButton_Click"
                        Style="{StaticResource ButtonStyle}"
                        Template="{StaticResource ButtonTemplate}"
                        Content="E"
                    />
                    <Button 
                        Click="PlugboardButton_Click"
                        Style="{StaticResource ButtonStyle}"
                        Template="{StaticResource ButtonTemplate}"
                        Content="R"
                    />
                    <Button 
                        Click="PlugboardButton_Click"
                        Style="{StaticResource ButtonStyle}"
                        Template="{StaticResource ButtonTemplate}"
                        Content="T"
                    />
                    <Button 
                        Click="PlugboardButton_Click"
                        Style="{StaticResource ButtonStyle}"
                        Template="{StaticResource ButtonTemplate}"
                        Content="Z"
                    />
                    <Button 
                        Click="PlugboardButton_Click"
                        Style="{StaticResource ButtonStyle}"
                        Template="{StaticResource ButtonTemplate}"
                        Content="U"
                    />
                    <Button 
                        Click="PlugboardButton_Click"
                        Style="{StaticResource ButtonStyle}"
                        Template="{StaticResource ButtonTemplate}"
                        Content="I"
                    />
                    <Button 
                        Click="PlugboardButton_Click"
                        Style="{StaticResource ButtonStyle}"
                        Template="{StaticResource ButtonTemplate}"
                        Content="O"
                    />
                </StackPanel>
                <StackPanel
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"    
                    >
                    <Button 
                        Style="{StaticResource ButtonStyle}"
                        Template="{StaticResource ButtonTemplate}"
                        Content="A"
                        Click="PlugboardButton_Click"
                    />
                    <Button 
                        Style="{StaticResource ButtonStyle}"
                        Template="{StaticResource ButtonTemplate}"
                        Content="S"
                        Click="PlugboardButton_Click"
                    />
                    <Button 
                        Style="{StaticResource ButtonStyle}"
                        Template="{StaticResource ButtonTemplate}"
                        Content="D"
                        Click="PlugboardButton_Click"
                    />
                    <Button 
                        Style="{StaticResource ButtonStyle}"
                        Template="{StaticResource ButtonTemplate}"
                        Content="F"
                        Click="PlugboardButton_Click"
                    />
                    <Button 
                        Style="{StaticResource ButtonStyle}"
                        Template="{StaticResource ButtonTemplate}"
                        Content="G"
                        Click="PlugboardButton_Click"
                    />
                    <Button 
                        Style="{StaticResource ButtonStyle}"
                        Template="{StaticResource ButtonTemplate}"
                        Content="H"
                        Click="PlugboardButton_Click"
                    />
                    <Button 
                        Style="{StaticResource ButtonStyle}"
                        Template="{StaticResource ButtonTemplate}"
                        Content="J"
                        Click="PlugboardButton_Click"
                    />
                    <Button 
                        Style="{StaticResource ButtonStyle}"
                        Template="{StaticResource ButtonTemplate}"
                        Content="K"
                        Click="PlugboardButton_Click"
                    />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Button 
                        Style="{StaticResource ButtonStyle}"
                        Template="{StaticResource ButtonTemplate}"
                        Content="P"
                        Click="PlugboardButton_Click"
                    />
                    <Button 
                        Style="{StaticResource ButtonStyle}"
                        Template="{StaticResource ButtonTemplate}"
                        Content="Y"
                        Click="PlugboardButton_Click"
                    />
                    <Button 
                        Style="{StaticResource ButtonStyle}"
                        Template="{StaticResource ButtonTemplate}"
                        Content="X"
                        Click="PlugboardButton_Click"
                    />
                    <Button 
                        Style="{StaticResource ButtonStyle}"
                        Template="{StaticResource ButtonTemplate}"
                        Content="C"
                        Click="PlugboardButton_Click"
                    />
                    <Button 
                        Style="{StaticResource ButtonStyle}"
                        Template="{StaticResource ButtonTemplate}"
                        Content="V"
                        Click="PlugboardButton_Click"
                    />
                    <Button 
                        Style="{StaticResource ButtonStyle}"
                        Template="{StaticResource ButtonTemplate}"
                        Content="B"
                        Click="PlugboardButton_Click"
                    />
                    <Button 
                        Style="{StaticResource ButtonStyle}"
                        Template="{StaticResource ButtonTemplate}"
                        Content="N"
                        Click="PlugboardButton_Click"
                    />
                    <Button 
                        Style="{StaticResource ButtonStyle}"
                        Template="{StaticResource ButtonTemplate}"
                        Content="M"
                        Click="PlugboardButton_Click"
                    />
                    <Button 
                        Style="{StaticResource ButtonStyle}"
                        Template="{StaticResource ButtonTemplate}"
                        Content="L"
                        Click="PlugboardButton_Click"
                    />
                </StackPanel>
            </StackPanel>
        </Grid>
        <Grid 
            Grid.Row="1"
            Grid.Column="0"
            Margin="10"
        >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="8*"/>
            </Grid.RowDefinitions>
            <TextBlock 
                Margin="5"
                Grid.Row="0"
                Grid.Column="0"
                VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Text="Message to encode"
                    TextAlignment="Center"
                    Foreground="#fff"
                    FontSize="20"
            />
            <Border
                Grid.Row="1"
                Grid.Column="0"
                Padding="10"
            >
                <TextBox 
                    x:Name="NotEncodedText"
                    Style="{StaticResource TextBoxStyle}"
                    PreviewTextInput="NotEncodedText_PreviewTextInput"
                >
                    <TextBox.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="10"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
            </Border>
            <Border
                Grid.Column="1"
                Grid.Row="1"
            >
                <StackPanel 
                    Orientation="Vertical"
                    VerticalAlignment="Center"
                >
                    <Button 
                        x:Name="EncodeButton"
                        Click="EncodeButton_Click"
                        MaxHeight="40"
                        HorizontalAlignment="Center"
                        Content="Encode"
                        Background="#05b3f7"
                        Foreground="#fff"
                        MinWidth="80"
                        MinHeight="30"
                    >
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                    <Button 
                        x:Name="ResetButton"
                        Click="ResetButton_Click"
                        Margin="0 10"
                        MaxHeight="40"
                        HorizontalAlignment="Center"
                        Content="Reset"
                        Background="#e81a1a"
                        Foreground="#fff"
                        MinWidth="80"
                        MinHeight="30"
                    >
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
                
            </Border>
            <TextBlock 
                Margin="5"
                Grid.Row="0"
                Grid.Column="2"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Text="Encoded message"
                TextAlignment="Center"
                Foreground="#fff"
                FontSize="20"
            />
            <Border
                Grid.Row="1"
                Grid.Column="2"
                Padding="10"
            >
                <TextBox 
                    x:Name="EncodedText"
                    IsReadOnly="True"
                    Style="{StaticResource TextBoxStyle}"
                >
                    <TextBox.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="10"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
            </Border>
        </Grid>
        <Grid 
            Grid.Row="2"
            Grid.Column="0"
            Background="#DDD"
        >
            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="16"
                FontWeight="Bold"
                >Created by Tomasz Maciążek
            </TextBlock>
        </Grid>
    </Grid>
</Window>
